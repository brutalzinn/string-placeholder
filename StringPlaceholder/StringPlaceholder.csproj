<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>String Placeholder</Title>
		<Description>Nuget package to loop through text by a specific placeholder pattern. Replacing the found part with the return of a list of methods.</Description>
		<PackageProjectUrl>https://github.com/brutalzinn/string-placeholder.git</PackageProjectUrl>
		<RepositoryUrl>https://github.com/brutalzinn/string-placeholder.git</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>string,placeholder,substitutor</PackageTags>
		<RepositoryType>git</RepositoryType>
	</PropertyGroup>

	<ItemGroup>
		<None Update="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
